<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_5dp"
    android:backgroundTint="@color/item_task_color"
    android:padding="@dimen/size_5dp"
    app:cardCornerRadius="@dimen/size_10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_5dp"
        android:layout_marginEnd="@dimen/size_10dp"
        android:layout_marginBottom="@dimen/size_10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_proj_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10dp"
            android:text="@string/random_text"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_content_item_proj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5dp"
            android:maxEms="20"
            android:maxLength="20"
            android:maxLines="1"
            android:text="@string/random_text"
            android:textColor="@color/white"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintStart_toStartOf="@id/text_proj_title"
            app:layout_constraintTop_toBottomOf="@id/text_proj_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>